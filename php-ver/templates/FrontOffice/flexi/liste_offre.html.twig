<div class="row">
  <div class="col-md-12">
    <div class="card animated fadeInRight">
      <div class="px-4 py-3 border-bottom">
          <h5 class="card-title fw-semibold mb-0 text-center">Séléctionnez une offre</h5>
      </div>
        <ul class="nav nav-tabs justify-content-center mt-2" role="tablist">
          <li class="nav-item">
            <a
              class="nav-link active"
              data-bs-toggle="tab"
              href="#home"
              role="tab"
            >
              <span>Internet</span>
            </a>
          </li>
          <li class="nav-item">
            <a
              class="nav-link"
              data-bs-toggle="tab"
              href="#bundle"
              role="tab"
            >
              <span>Bundle</span>
            </a>
          </li>
        </ul>
      <div class="card-body p-2">
        
        <div class="spinner text-center d-none" style="display: flex;align-items: center;justify-content: center;width: 100%;height: 100%;position: absolute;top: -4px;left: -4px;background-color:  rgb(247 247 249 / 47%);z-index: 999;">
          <div class="spinner-border text-primary" role="status">
              <span class="visually-hidden">Loading...</span>
          </div>
        </div>
        
        <div class="row">
          <div class="tab-content">
              <div class="tab-pane active" id="home" role="tabpanel">
              <div class="row">
              {% for i in 0..5 %}
                <div class="col-md-4">
                    <div class="card border-0 text-center rounded-lg shadow-sm kl-offer-card">
                      <div class="card-body row bg-white ml-3 mr-0 p-2 kl-ml">
                        {% set rand = random(1,30) %}
                        {# <h5 class="card-title fw-semibold mb-3">{{off}}  {{rand}}€ </h5>
                        <p class="card-text">FORFAIT {{rand}}€</p> #}
                        <div class="col-6 px-0 text-left">
                          <h5 class="fw-semibold text-center">Recharger</h5>
                          <h5 class="card-title offer-value font-weight-bold">{{rand}}&nbsp;MAD</h5>
                          <hr class="text-muted my-0 ml-0">
                        </div>
                        <div class="col-6 px-2 ">
                          <div class="row justify-content-center">
                            <div class="col-12">
                                <small class="text-info font-weight-bold js-serenity">Soyez + serein !</small>
                            </div>
                            <div class="col">
                                <button class="mt-3 btn mt-2 btn btn-primary shadow kl-acheter" data-type="bundle" data-montant="{{rand}}">Acheter&nbsp;<i class="ti ti-chevron-right" aria-hidden="true"></i></button>
                            </div>
                          </div>
                        </div>
                        <div class="col-6 px-0 text-left">
                          <p class="card-text mt-0">
                              <small class="text-muted">Payez</small>
                              <small class="card-text "></small>
                              <span class="card-text text-info font-weight-bold js-offer-price">33,44&nbsp;€</span>
                          </p>
                        </div>
                      </div> 
                    </div>
                </div>
              {% endfor %}
              </div>
              </div>
              <div class="tab-pane" id="bundle" role="tabpanel">
              <div class="row">
              {% for i in 0..5 %}
                <div class="col-md-4">
                    <div class="card border-0 text-center rounded-lg shadow-sm kl-offer-card">
                      <div class="card-body row bg-white ml-3 mr-0 p-2 kl-ml">
                        {% set rand = random(1,30) %}
                        {# <h5 class="card-title fw-semibold mb-3">{{off}}  {{rand}}€ </h5>
                        <p class="card-text">FORFAIT {{rand}}€</p> #}
                        <div class="col-6 px-0 text-left">
                          <h5 class="fw-semibold text-center">Recharger</h5>
                          <h5 class="card-title offer-value font-weight-bold">{{rand}}&nbsp;MAD</h5>
                          <hr class="text-muted my-0 ml-0">
                        </div>
                        <div class="col-6 px-2 ">
                          <div class="row justify-content-center">
                            <div class="col-12">
                                <small class="text-info font-weight-bold js-serenity">La + populaire !</small>
                            </div>
                            <div class="col">
                                <button class="mt-3 btn mt-2 btn btn-primary shadow kl-acheter" data-type="bundle" data-montant="{{rand}}">Acheter&nbsp;<i class="ti ti-chevron-right" aria-hidden="true"></i></button>
                            </div>
                          </div>
                        </div>
                        <div class="col-6 px-0 text-left">
                          <p class="card-text mt-0">
                              <small class="text-muted">Payez</small>
                              <small class="card-text "></small>
                              <span class="card-text text-info font-weight-bold js-offer-price">33,44&nbsp;€</span>
                          </p>
                        </div>
                      </div> 
                    </div>
                </div>
              {% endfor %}
              </div>
              </div>
            </div>
        </div>
      </div>

      <div class=" text-center mb-2">
        <button type="button" class="btn btn-light kl-retour"><i class="ti ti-arrow-left"></i> Retour </button>  
      </div>

    </div>
  </div>
</div>