{% extends 'base_front.html.twig' %}

{% set menu_billeteries = true %}

{% block title %}billeteries{% endblock %}

{% block stylesheets %} 
    {{ parent() }}
    <style type="text/css">
        .card-blablacar {
            position: relative;
            border-radius: 10px;
            width: 100%;
            height: 300px;
            margin-bottom: 160px;
            display: flex;
            align-items: center;
            flex-direction: column;
            padding: 1rem;
        }
        .card-blablacar .bg-img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: inherit;
            z-index: 0;
        }
        .card-blablacar .bn-title {
            color: #fff;
            font-weight: 900;
            z-index: 1;
        }
        #search-direx-form {
            position: absolute;
            bottom: 0;
            transform: translateY(50%);
            border-radius: inherit;
            z-index: 1;
            background: #054752cf;
            backdrop-filter: blur(2px);
            width: calc(100% - 2rem);
            padding: 10px;
        }
        .controle-direx,
        .control-passager {
            width: 100%;
            height: 40px;
            background: #fff;
            display: flex;
            align-items: center;
            gap: 5px;
            border-radius: 5px;
            padding: 0 10px;
        }
        .controle-direx .filter-destination {
            flex: 1 0 auto;
            height: 100%;
            border: none;
            background: transparent;
            color: #054752;
            font-weight: 900;
        }
        .control-passager i.ti,
        .controle-direx i.ti {
            color: #054752;
            font-size: 20px;
        }
        .controle-direx .filter-destination::placeholder {
            color: #054752;
        }
        .control-passager,
        .control-date {
            cursor: pointer;
        }
        .liste-destination {
            max-height: 180px;
            overflow-y: auto;
            border-radius: inherit;
        }
        .liste-destination .select-destination {
            border-radius: inherit;
            padding: 5px 10px;
            cursor: pointer;
        }
        .liste-destination .select-destination.mb-2:last-of-type {
            margin-bottom: 0 !important;
        }
        .liste-destination .select-destination:hover {
            background: #ededed;
        }
        .dropdown-menu.passager-drop-menu {
            min-width: max-content;
            width: 260px;
        }
        .form-touch-spin input {
            flex: 1 0 60px;
            width: 60px;
        }
        .spin-minus,
        .spin-plus {
            font-size: 20px;
            cursor: pointer;
            color: #00aff5;
            transition: all 0.4s ease;
        }
        .spin-minus.disabled,
        .spin-plus.disabled {
            color: #dedede;
        }
        .control-date {
            position: relative;
        }
        .control-date input[type="date"] {
            position: absolute;
            bottom: 0;
            opacity: 0;
            pointer-events: none;
        }
        .change-direx {
            width: 100%;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #ff595a;
            border-radius: 10px;
            cursor: pointer;
        }
        .change-direx i.ti {
            font-size: 25px;
            color: #fff;
        }
        .btn-check:checked+.btn.label-check-direx, .btn.active, .btn.show, .btn:first-child:active, :not(.btn-check)+.btn:active {
            background-color: #ff595a;
            border-color: #fff;
            color: #fff;
        }
        span.date-label {
            color: #fff;
            font-weight: 700;
        }
        #date-aller-retour {
            display: none;
        }
    </style>
{% endblock %}

{% block body %}
