{% block stylesheets %} 
    {{ parent() }}
    <style type="text/css">
    input[type="date"] {
        appearance: none;
        -webkit-appearance: none;
        position: relative;
    }

    input[type="date"]::before {
        content: "üìÖ";
        position: absolute;
        right: 1rem;
        pointer-events: none;
        cursor: pointer;
    }
    .body-maritime {
        position: relative;
        width: 100%;
        min-height: 70vh;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .body-maritime .bg-img,
    .body-maritime .bg-img-m {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
