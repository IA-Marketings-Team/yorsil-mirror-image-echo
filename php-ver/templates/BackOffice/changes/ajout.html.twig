{% extends 'base_admin.html.twig' %}

{% block title %}Ajout d'un taux de change{% endblock %}

{% set menu_taux_change = true %}

{% block body %}

    <div class="card bg-light-info shadow-none position-relative overflow-hidden">
        <div class="card-body px-4 py-3">
          <div class="row align-items-center">
            <div class="col-9">
              <h4 class="fw-semibold mb-8">Taux de change ( 1 &euro;)</h4>
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a class="text-muted" href="javascript:void(0)">Taux de change</a></li>
                  <li class="breadcrumb-item"><a class="text-muted" href="{{ path('liste_changes')}}">Liste</a></li>
                  <li class="breadcrumb-item active" aria-current="page">Ajout</li>
                </ol>
              </nav>
            </div>
          </div>
        </div>
    </div>

    {{ form_start(form) }}
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body p-4">
                        <div class="row mb-4">
                            <div class="col md-4">{{ form_row(form.montant_change) }}</div>
                            <div class="col md-4">{{ form_row(form.devise) }}</div>
                            <div class="col md-4">{{ form_row(form.pays_change) }}</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="d-flex align-items-center justify-content-end gap-3">
                    <button class="btn btn-primary">Ajouter</button>
                    <a href="{{ path('liste_changes')}}" class="btn btn-danger">Annuler</a>
                </div>
            </div>
        </div>
    {{ form_end(form) }}
                   

{% endblock %}
