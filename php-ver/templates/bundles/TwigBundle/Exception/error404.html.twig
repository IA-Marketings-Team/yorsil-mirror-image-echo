{% extends "base_error.html.twig" %}

{% block title %} Page non trouv√©e{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .erreur-404-content {
            position: relative;
            width: 100%;
            height: 100vh;
            background: white;
            padding: 56px;
        }
        .img-erreur-404{
            width: 50%;
        }
        .erreur-404-content h2 {
            color: #8b8dfc;
            text-align: center;
            font-weight: 900;
            text-shadow: 0.4px 0.4px 0px #000000;
            font-family: cursive;
        }
        @media screen and (max-width: 600px){
            .erreur-404-content {
                padding: 10px;
            }
            .img-erreur-404 {
                width: 100%;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="position-relative overflow-hidden radial-gradient min-vh-100">
        <div class="erreur-404-content gap-3 d-flex flex-column align-items-center justify-content-center">
            <img src="{{ asset('modernize/images/error/erreur404.png') }}" class="img-erreur-404" alt="erreur404">
            {# <h2>Nous ne pouvons pas trouver cette page !</h2> #}
            <h2>La page que vous recherchez n'existe pas !</h2>
            <a href="{{ path('home_back')}}" class="btn btn-outline-danger btn-sm m-t fs-5">Tableau de bord</a>
        </div>
    </div>

{% endblock %}